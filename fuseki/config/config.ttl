@prefix fuseki:  <http://jena.apache.org/fuseki#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix tdb2:    <http://jena.apache.org/2016/tdb#> .
@prefix ja:      <http://jena.hpl.hp.com/2005/11/Assembler#> .

## Fuseki Server Configuration for Agentic Data Scraper Semantic Model

[] rdf:type fuseki:Server ;
   fuseki:services (
     <#gist-dbc-sow>
     <#ontologies-only>
     <#test-data>
   ) .

## Main dataset: Complete Gist-DBC-SOW-Contract connected graph
<#gist-dbc-sow> rdf:type fuseki:Service ;
    fuseki:name "gist-dbc-sow" ;
    fuseki:serviceQuery "sparql" ;
    fuseki:serviceUpdate "update" ;
    fuseki:serviceUpload "upload" ;
    fuseki:serviceReadWriteGraphStore "data" ;
    fuseki:serviceReadGraphStore "get" ;
    fuseki:dataset <#gist-dbc-sow-dataset> .

<#gist-dbc-sow-dataset> rdf:type tdb2:DatasetTDB2 ;
    tdb2:location "/fuseki/databases/gist-dbc-sow" ;
    tdb2:unionDefaultGraph true .

## Ontologies-only dataset: For ontology development and validation
<#ontologies-only> rdf:type fuseki:Service ;
    fuseki:name "ontologies" ;
    fuseki:serviceQuery "sparql" ;
    fuseki:serviceUpdate "update" ;
    fuseki:serviceUpload "upload" ;
    fuseki:serviceReadWriteGraphStore "data" ;
    fuseki:serviceReadGraphStore "get" ;
    fuseki:dataset <#ontologies-dataset> .

<#ontologies-dataset> rdf:type tdb2:DatasetTDB2 ;
    tdb2:location "/fuseki/databases/ontologies" ;
    tdb2:unionDefaultGraph true .

## Test data dataset: For testing queries and development
<#test-data> rdf:type fuseki:Service ;
    fuseki:name "test-data" ;
    fuseki:serviceQuery "sparql" ;
    fuseki:serviceUpdate "update" ;
    fuseki:serviceUpload "upload" ;
    fuseki:serviceReadWriteGraphStore "data" ;
    fuseki:serviceReadGraphStore "get" ;
    fuseki:dataset <#test-dataset> .

<#test-dataset> rdf:type tdb2:DatasetTDB2 ;
    tdb2:location "/fuseki/databases/test-data" ;
    tdb2:unionDefaultGraph true .